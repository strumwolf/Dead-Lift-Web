!!! 5
html
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='keywords', content='Dead-Lift, Scott Thomson, Paul Sacchetti, Brian Kurtz, Joe Hoxie')
    meta(name='description', content='The Official Dead-Lift website for info, shows, pictures and other media')
    meta(name='author', content='Brian Kurtz')
    //Mobile viewport optimized: j.mp/bplateviewport 
    meta(name='viewport', content='width=device-width)
    title Dead-Lift #{title}
    link(rel='shortcut icon', href='/images/favicon.ico', type='image/x-icon')
    link(type='text/css', rel='stylesheet', href='/stylesheets/style.css')
    br
    //if lt IE 10
      script(src='http://html5shiv.googlecode.com/svn/trunk/html5.js', type='text/javascript')
      
    br
    script(type='text/javascript', src='http://ajax.googleapis.com/ajax/libs/jquery/1.7/jquery.min.js')
    script(type='text/javascript')
      function DoNav(theUrl)
      {
        document.location.href = theUrl;
      }
  body
    .screen
      header
        .imgHeader
          img(src='/images/DL_banner.jpg', width='800', 'height='300', alt='Dead-Lift')
      nav
        .nav
          ul
            li 
              a(href='/') Home
            li 
              a(href='/band') Band
            li 
              a(href='/shows') Shows
            li 
              a(href='/video') Video
            li
              a(href='#', onclick='window.open("/player", "MP3_Player", "width=448, height=200, location=no, menubar=no, directories=no, toolbar=no, status=yes")') Tunes
            li
              a(href='/gallery') Gallery
            li 
              a(href='/discography') Releases
            li 
              a(href='/links') Links
            li 
              a(href='/contact') Contact Us
      .container
        .main-content
          block content
        .sidebar
          .shows
            h5 Shows
            p 
              | November 9th, 2012
              br
              | Bogies, NY
            p 
              | Sept 21th, 2012
              br
              | Bogies, NY
              br
          table
            tr
              td 
                a(href='http://www.twitter.com/deadlift518')
                  img(src='/images/twitter.png', width='82', height='82')
              td
                a(href='http://www.facebook.com/pages/Dead-Lift/120128450045')
                  img(src='/images/f_logo.jpg', width='64', height='64')

      .footer
        #copy
          p &copy; Dead-Lift 2012
        #links
          if (!user)
            p
              a(href='/login') Admin
          else
            p
              a(href='/logout') Logout
            p
              a(href='/add_show') Add Shows
            p
              a(href='/new_post') New Post
            p
              a(href='/uploadPhoto') New Photo
